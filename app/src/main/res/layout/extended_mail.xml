<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/screen_sendnews_et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заголовок новости" />

    <Button
        android:id="@+id/screen_sendnews_btn_selectVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать видео" />

    <EditText
        android:id="@+id/screen_sendnews_et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35px"
        android:text="Введите сюда текст вашей новости" />

    <Button
        android:id="@+id/screen_sendnews_btn_send"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:text="Отправить" />
</LinearLayout>